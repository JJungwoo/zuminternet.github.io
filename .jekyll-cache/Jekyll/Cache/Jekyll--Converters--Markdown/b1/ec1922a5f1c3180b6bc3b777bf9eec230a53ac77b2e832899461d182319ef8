<span class="nd">@Scheduled</span><span class="o">(</span><span class="n">cron</span> <span class="o">=</span> <span class="s">"0 0 2 * * *"</span><span class="o">)</span>
<span class="kd">public</span> <span class="kt">void</span> <span class="nf">deleteNotificationByCron</span><span class="o">()</span> <span class="o">{</span>
    
    <span class="n">notificationRepository</span><span class="o">.</span><span class="na">deleteNotificationByCron</span><span class="o">();</span>
    
<span class="o">}</span>
</code></pre></div></div>
